{
    "manifest_version": 3,
    "name": "YouTube Performance Optimizer",
    "description": "Optimize YouTube performance, fix video loading issues, and auto-reload for smooth navigation",
    "version": "1.0.2",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "inject.js"
            ],
            "run_at": "document_start",
            "all_frames": false,
            "world": "MAIN"
        },
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}